<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:background="@color/main_content_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.taobuxiu.driver.views.auth.FindPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#2684cf"
        android:gravity="center_vertical"
        android:layout_height="200dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height">

            <FrameLayout
                android:layout_width="56dip"
                style="@style/Widget.AppCompat.ActionButton"
                android:id="@+id/left_image"
                android:clickable="true"
                android:layout_height="56dip">
                <ImageView
                    android:layout_width="24dip"
                    android:id="@+id/left_image_view"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_height="24dip" />
            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:textSize="18dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="找回密码"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/login_banner"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:layout_height="150dip" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:layout_marginTop="10dip"
        android:paddingBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:src="@drawable/ic_phone"
            android:layout_height="25dip" />

        <EditText
            android:id="@+id/mobile_edit"
            android:background="@null"
            android:hint="请输入手机号"
            android:layout_marginLeft="16dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/main_content_bg"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_height="1dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:src="@drawable/ic_register_code"
            android:layout_height="25dip" />

        <EditText
            android:id="@+id/code_edit"
            android:background="@null"
            android:hint="请输入验证码"
            android:layout_marginLeft="16dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.taobuxiu.driver.views.widgets.CountDownTextView
            android:layout_width="wrap_content"
            android:id="@+id/get_code"
            android:clickable="true"
            android:text="获取验证码"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/main_content_bg"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_height="1dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="11dip"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingBottom="10dip"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dip"
            android:src="@drawable/ic_password"
            android:layout_height="25dip" />

        <EditText
            android:id="@+id/password_edit"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_marginLeft="16dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/login_btn_bg"
        android:text="完成"
        android:layout_margin="16dip"
        android:id="@+id/change"
        android:padding="10dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_height="wrap_content" />

</LinearLayout>
