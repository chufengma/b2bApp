<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fill_company_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_bg"
    android:orientation="vertical"
    tools:context="com.taobuxiu.driver.views.auth.FillCompanyNameActivity">

    <com.taobuxiu.driver.views.widgets.ToolBar
        android:layout_width="match_parent"
        app:tool_bar_title="填写公司信息"
        android:layout_height="@dimen/tool_bar_height" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/company"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginTop="16dip"
        android:background="@color/white"
        android:hint="填写公司信息"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/login_btn_bg"
        android:text="提交"
        android:layout_margin="16dip"
        android:id="@+id/submit"
        android:padding="10dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

</LinearLayout>
