<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_content_bg">

    <com.taobuxiu.driver.views.widgets.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        app:tool_bar_title="上传资料" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_fill_cer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.taobuxiu.driver.views.auth.FillCerActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:paddingTop="10dip"
                android:text="请上传以下照片，以便淘不锈物流进行审核"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:text="证件所有人需与注册时填写公司名称保持一致，注意拍摄清晰"
                android:textSize="14dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:paddingBottom="10dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:paddingTop="10dip"
                android:text="公司名称：江苏淘不锈电子商务有限公司"
                android:textColor="@color/main_blue"
                android:textSize="16dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingBottom="10dip"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/main_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="营业执照" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/license"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/ic_cer_add" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/main_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="税务登记证" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tax"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/ic_cer_add" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:paddingBottom="10dip">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/main_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="组织机构代码" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/companyCode"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/ic_cer_add" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/main_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="道路许可证" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/road"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/ic_cer_add" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:paddingBottom="10dip">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/main_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="开户许可证" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/account"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/ic_cer_add" />

                </LinearLayout>

                <View
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:paddingTop="10dip"
                android:text="车辆无法满足条件请致电客服 021-15698756"
                android:textColor="@color/main_yellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:paddingRight="16dip"
                    android:text="三张车辆行驶证（必须是自有车辆）" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="16dip"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/car1"
                            android:layout_width="100dip"
                            android:layout_height="100dip"
                            android:src="@drawable/ic_cer_add" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="16dip"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/car2"
                            android:layout_width="100dip"
                            android:layout_height="100dip"
                            android:src="@drawable/ic_cer_add" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/car3"
                    android:layout_marginLeft="16dip"
                    android:layout_marginTop="5dip"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:src="@drawable/ic_cer_add" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/submit_btn_bg"
                android:text="提交"
                android:layout_margin="16dip"
                android:id="@+id/submit"
                android:padding="10dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
