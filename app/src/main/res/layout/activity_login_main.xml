<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:background="@drawable/ic_login_bg"
    tools:context="com.onefengma.taobuxiu.views.LoginMainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:src="@drawable/ic_logo"
        android:layout_width="130dip"
        android:layout_height="130dip" />

    <TextView
        android:id="@+id/goto_register"
        android:layout_alignParentBottom="true"
        android:text="注册"
        android:layout_marginBottom="150dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:textSize="16dip"
        android:paddingTop="8dip"
        android:clickable="true"
        android:paddingBottom="8dip"
        android:textColor="@color/white"
        android:background="@drawable/register_btn_bg_normal"
        android:layout_above="@id/goto_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/goto_login"
        android:text="登陆"
        android:gravity="center"
        android:textSize="16dip"
        android:paddingTop="8dip"
        android:clickable="true"
        android:paddingBottom="8dip"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_bg_normal"
        android:layout_above="@id/goto_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
