<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_content_bg"
    android:orientation="vertical">

    <com.onefengma.taobuxiu.views.widgets.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:id="@+id/toolbar"
        app:tool_bar_title="求购信息" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/main_blue"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/main_blue"
        app:tabTextColor="#d11E7CBA" />

    <android.support.v4.view.ViewPager
        android:id="@+id/sales_buy_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>