<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/company"
        android:text="风马科技有限公司"
        android:padding="10dip"
        android:textColor="@color/black"
        android:textSize="14dip"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dip"
        android:layout_below="@id/company"
        android:textColor="@color/black"
        android:textSize="16dip"
        android:text="18355551276" />

    <TextView
        android:id="@+id/name"
        android:layout_toLeftOf="@+id/contact"
        android:layout_toRightOf="@id/mobile"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dip"
        android:textColor="@color/black"
        android:textSize="16dip"
        android:layout_below="@id/company"
        android:layout_height="wrap_content"
        android:text="风马" />

    <TextView
        android:id="@id/contact"
        android:layout_width="wrap_content"
        android:text="联系商家"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:textColor="@color/main_green"
        android:layout_below="@id/company"
        android:layout_alignParentRight="true"
        android:textSize="16dip"
        android:background="@drawable/abc_item_background_holo_dark"
        android:clickable="true" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/locationCity"
        android:text="所在地： 江苏无锡"
        android:padding="10dip"
        android:layout_below="@id/mobile"
        android:textColor="@color/black"
        android:textSize="14dip"
        android:layout_height="wrap_content" />
</RelativeLayout>