<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_message_edit"
    android:layout_width="match_parent"
    android:background="@color/main_gray_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onefengma.taobuxiu.views.logistics.MessageEditActivity">

    <com.onefengma.taobuxiu.views.widgets.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:tool_bar_title="填写运货数量"
        android:layout_height="56dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_margin="16dip"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:hint="运货数量"
            android:gravity="left|top"
            android:inputType="number"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="30dip"
            android:background="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:text="吨"
            android:padding="10dip"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="16dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#fbbd2d"
        android:text="确定"
        android:id="@+id/done"
        android:textSize="16dip"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:textColor="@color/white"
        android:padding="10dip"
        android:layout_height="wrap_content" />

</LinearLayout>
