<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:paddingTop="2dip"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dip"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/title_layout"
            android:background="@color/light_green"
            android:layout_width="match_parent"
            android:padding="10dip"
            android:layout_height="wrap_content">

            <TextView
                android:text="订单号：3sdfat45sdfdsf"
                android:textColor="@color/black"
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:textSize="16dip"
                android:layout_height="wrap_content" />

            <TextView
                android:text="质检中"
                android:textColor="@color/black"
                android:textSize="16dip"
                android:layout_gravity="right"
                android:id="@+id/qt_status"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dip"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            android:layout_below="@id/title_layout"
            android:paddingLeft="20dip"
            android:paddingTop="10dip">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dip"
                android:text="不锈钢卷/304/2B/太钢(江苏 无锡)"
                android:textColor="#000" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="4dip"
                android:text="10*100*100 11.5~11.6 100kg"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:text="备注：11.5~11.6 100kg10*100*100 11.5~11.6 100kg10*100*100 11.5~11.6 100kg10*100*100 11.5~11.6 100kg10*100*100 11.5~11.6 100kg10*100*100 11.5~11.6 100kg"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/dead_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="4dip"
                android:text="求购截止：2015-11-21 11:32"
                android:textSize="12dip" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>